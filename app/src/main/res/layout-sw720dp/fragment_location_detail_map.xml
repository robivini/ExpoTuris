<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey" >

    <com.app.myplaces.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/layout_slidingup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        custom:collapsedHeight="120sp"
        custom:shadowHeight="10sp" >

        <LinearLayout
            android:id="@+id/layout_title_directions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layout_info"
                android:layout_width="match_parent"
                android:layout_height="120sp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_toLeftOf="@+id/img_indicator"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_duration_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="11 min(4.0 km)"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_sumary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:singleLine="true"
                        android:text="Ly Nam De Ha Noi"
                        android:textColor="@color/black"
                        android:textSize="25sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/ic_action_collapse" />
            </RelativeLayout>

            <ScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2sp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollbars="none" >

                <LinearLayout
                    android:id="@+id/list_directions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp"
                    android:orientation="vertical"
                    android:paddingBottom="5sp" >
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </com.app.myplaces.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>