<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180sp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/img_location"
            android:layout_width="120sp"
            android:layout_height="120sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_location_default" />

        <LinearLayout
            android:id="@+id/layout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_location"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_toLeftOf="@+id/tv_distance"
            android:layout_toRightOf="@+id/img_location"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_name_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ATM SeABank"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sumary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5sp"
                android:singleLine="true"
                android:text="Phan chau trinh"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <RatingBar
                android:id="@+id/ratingBar1"
                style="@style/big_ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:isIndicator="true"
                android:rating="5" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/round_rect_distance"
            android:singleLine="true"
            android:text="1.2 Miles"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="italic" />
    </RelativeLayout>

</RelativeLayout>