<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="20sp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10sp" >

        <TextView
            android:id="@+id/tv_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="5sp"
            android:singleLine="true"
            android:text="@string/format_radius"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_min_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="italic" />

            <com.app.myplaces.view.DBSeekBarView
                android:id="@+id/dBSeekBarView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15sp"
                custom:max="50"
                custom:orientation="horizontal"
                custom:progress="3"
                custom:slidebar="@drawable/slider"
                custom:thumb="@drawable/thumb" />

            <TextView
                android:id="@+id/tv_max_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15sp"
                android:singleLine="true"
                android:text="50"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_metric"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/bg_white_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title_metric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@+id/tv_metric"
            android:singleLine="true"
            android:text="@string/title_units"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_metric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@+id/img_next1"
            android:singleLine="true"
            android:text="Kilometers"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5sp"
            android:src="@drawable/ic_action_next_item" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_piority"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="2sp"
        android:background="@drawable/bg_white_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title_piority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@+id/tv_piority"
            android:singleLine="true"
            android:text="@string/title_piority"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_piority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@+id/img_next2"
            android:singleLine="true"
            android:text="Rating"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5sp"
            android:src="@drawable/ic_action_next_item" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/layout_travel_mode"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="2sp"
        android:background="@drawable/bg_white_selector"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title_travel_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@+id/tv_travel_mode"
            android:singleLine="true"
            android:text="@string/title_travel_modes"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_travel_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5sp"
            android:layout_toLeftOf="@+id/img_next3"
            android:singleLine="true"
            android:text="Driving"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/img_next3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5sp"
            android:src="@drawable/ic_action_next_item" />
    </RelativeLayout>

</LinearLayout>